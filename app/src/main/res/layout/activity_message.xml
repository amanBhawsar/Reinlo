<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Message">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/toolb"
                app:subtitleTextColor="@android:color/white"
                app:titleTextColor="@android:color/white">
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <ProgressBar
            android:id="@+id/progressBar2"
            android:layout_marginTop="60dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_above="@+id/mobilenumber"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="-57dp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/mobilenumber"
            android:layout_width="241dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="57dp"
            android:background="@drawable/edit"
            android:hint="mobile number"
            android:textAlignment="center"
            android:textColorHint="@android:color/white" />

        <EditText
            android:id="@+id/messgecontent"
            android:layout_width="333dp"
            android:layout_height="159dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="114dp"
            android:background="@drawable/edit"
            android:hint="Please Enter the messsage you want to send here"
            android:textAlignment="center"
            android:textColorHint="@android:color/white" />

        <Button
            android:id="@+id/sendmessage"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="206dp"
            android:background="@drawable/button"
            android:text="Send"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/dailymessages"
            android:layout_width="230dp"
            android:layout_height="77dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button"
            android:text="Start Retriving list"
            android:textColor="@android:color/white" />

    </RelativeLayout>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:id="@+id/faab"
        android:visibility="visible"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:clickable="true"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        app:backgroundTint="@android:color/transparent"
        android:src="@drawable/ic_notifications_green_24dp"
        android:layout_height="wrap_content" />
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:id="@+id/messagefaab"
        android:visibility="visible"
        android:layout_gravity="bottom|start"
        android:layout_margin="16dp"
        android:clickable="true"

        android:background="@android:color/transparent"

        android:src="@drawable/ic_message_green_24dp"
        android:layout_height="wrap_content" />


</android.support.design.widget.CoordinatorLayout>